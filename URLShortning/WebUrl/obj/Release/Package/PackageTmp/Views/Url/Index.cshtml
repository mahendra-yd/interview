
@{

	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Urlify</title>
	<link href="~/Content/url.css" rel="stylesheet" type="text/css" />
</head>
<body>
	<div class="glyphicon-align-center">
		<H1 >    Welcome    </H1>
		<div >
			<form action="" id="url" method="post">
				<div>
					<label class="margin">Enter long Url</label>
					<input name="longurl" />
					@{

		var listItems = new List<string>
		{
		  "adobe",
		  "hp",
		  "ms"
		};
				@Html.DropDownList("client", new SelectList(listItems), new { onchange = "getAlldata()" })
					}
					<button class="margin"> submit</button>
				</div>
			</form>
		</div>
		<br /><br /><br /><br />
		<div>
			<form action="" id="url" method="post">
				<div>
					<label  class="margin">Enter short Url</label>
					<input name="shorturl" class="margin"/>
					<button class="margin"> submit</button>
				</div>
			</form>
		</div>
		<br />
		<br />  <br />  <br />
						<div>
							<label class="margin">@ViewBag.resultTitle</label>
							<br />
							<textarea id="fullurl"  style="margin: 2px; width: 746px; height: 91px;"> @ViewBag.fullurl</textarea>
						</div>
		</div>
</body>
</html>
